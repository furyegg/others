<script type="text/javascript">
    function updateErrorCodePanel() {
        var panel = $('#errorCodeDiv');
        var tick = $('#errorCodeTick');

        if (tick.hasClass('glyphicon-ok')) {
            panel.removeClass('has-warning');
            panel.addClass('has-success');
        } else {
            panel.removeClass('has-success');
            panel.addClass('has-warning');
        }
    }

    function updatePanel(panel, tick) {
        if (tick.hasClass('glyphicon-ok')) {
            panel.removeClass('has-warning');
            panel.removeClass('has-error');
            panel.addClass('has-success');
        }
        else if (tick.hasClass('glyphicon-remove')) {
            panel.removeClass('has-warning');
            panel.removeClass('has-success');
            panel.addClass('has-error');
        } else {
            panel.removeClass('has-success');
            panel.removeClass('has-error');
            panel.addClass('has-warning');
        }
    }

</script>
